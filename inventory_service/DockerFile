# Inventory/Dockerfile
FROM python:3.11-slim

WORKDIR /app

# Install shared package first
COPY kitchen_commons/ /tmp/kitchen_commons/
RUN pip install --no-cache-dir /tmp/kitchen_commons && \
    rm -rf /tmp/kitchen_commons

# Install service dependencies
COPY inventory_service/requirements.txt ./requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Copy service code
COPY inventory_service/ ./inventory_service/

EXPOSE 8000

CMD ["uvicorn", "inventory_service.InventoryServiceEntry:app", "--host", "0.0.0.0", "--port", "8000"]