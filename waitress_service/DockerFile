# Waitress/Dockerfile
FROM python:3.11-slim

WORKDIR /app

# Install shared package
COPY kitchen_commons/ /tmp/kitchen_commons/
RUN pip install --no-cache-dir /tmp/kitchen_commons && \
    rm -rf /tmp/kitchen_commons

# Install service dependencies
COPY waitress_service/requirements.txt ./requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Copy service code
COPY waitress_service/ ./waitress_service/

EXPOSE 6000

CMD ["uvicorn", "waitress_service.WaitressServiceEntry:app", "--host", "0.0.0.0", "--port", "6000"]