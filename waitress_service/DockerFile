# Waitress/Dockerfile
FROM python:3.14-slim

WORKDIR /app

# Install shared package
COPY kitchen-commons/ /tmp/kitchen-commons/
RUN pip install --no-cache-dir /tmp/kitchen-commons && \
    rm -rf /tmp/kitchen-commons

# Install service dependencies
COPY waitress_service/requirements.txt ./requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Copy service code
COPY waitress_service/ ./waitress_service/

EXPOSE 6000

CMD ["uvicorn", "waitress_service.WaitressServiceEntry:app", "--host", "0.0.0.0", "--port", "6000"]